<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.ensisa.bepop2controller.activity.Bebop2Activity"
    android:id="@+id/piloting_view">

    <fr.ensisa.bepop2controller.view.Bebop2VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <TextView
            android:text="Battery : -"
            android:id="@+id/batteryLabel"
            android:layout_weight="1"
            android:layout_height="18dp"
            android:background="@color/background"
            android:textColor="@color/primary_light"
            android:layout_width="wrap_content" />

        <TextView
            android:text="Altitude : -"
            android:id="@+id/altitudeLabel"
            android:layout_weight="1"
            android:layout_height="18dp"
            android:background="@color/background"
            android:textColor="@color/primary_light"
            android:layout_width="wrap_content" />

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_backward"
        android:id="@+id/backwardButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="64dp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_forward"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/forwardButton"
        android:layout_marginBottom="128dp"
        android:layout_marginStart="64dp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_left"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/leftButton"
        android:layout_marginBottom="64dp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_right"
        android:id="@+id/rightButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="128dp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_anticlockwise"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/anticlockwiseButton"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="64dp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_up"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/upButton"
        android:layout_marginBottom="128dp"
        android:layout_marginEnd="64dp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_camera"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/homeButton"
        android:id="@+id/cameraButton"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="34dp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_video"
        android:id="@+id/videoButton"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/homeButton"
        android:layout_marginTop="34dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_warning"
        android:id="@+id/emergencyButton"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_take_off"
        android:id="@+id/takeOffAndLandButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_home"
        android:id="@+id/homeButton"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_down"
        android:id="@+id/downButton"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/clockwiseButton"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_clockwise"
        android:id="@+id/clockwiseButton"
        android:layout_above="@+id/downButton"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_download"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:id="@+id/downloadbutton"
        android:background="@android:color/transparent" />

</RelativeLayout>
